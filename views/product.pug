extends layout

block content
  .row.mt-3
    img.col-md-6.col-sm-12
    .container.col-md-6.col-sm-12
      h2= product.name
      p= product.description
      form(method="post" action="/basket").form-inline
        label(for="quantity") Количество
        input.form-control.mr-3.ml-3(type="number" name="quantity" id="quantity" min=1 max=product.count_available value=1)
        input(type="hidden" name="product_id" value=product.id)
        button.btn.btn-success(type="submit") В корзину